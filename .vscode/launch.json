{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "python3: Debug this module.",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"cwd": "${fileDirname}",
			"console": "integratedTerminal",
			"justMyCode": false,
		},
		{
			"name": "python3: Debug application.",
			"type": "debugpy",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "dope/__init__.py",
			"args": [
				"--debug",
				// "--edu",
				// "-t",
			],
			"console": "integratedTerminal",
			"justMyCode": false,
		},
		{
			"name": "python3: Debug PYTEST.",
			"type": "debugpy",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "/usr/local/lib/python3.10/dist-packages/pytest",
			"args": [
				// "--exitfirst",
				// "--count=1",
				// "-k test_v_links",
			],
			"console": "integratedTerminal",
			"justMyCode": false,
		},
	]
}