{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "python3: Run this module locally.",
			"type": "shell",
			"options": {
				"cwd": "${fileDirname}",
			},
			"command": "python3 -u ${file}",
			"group": "build",
		},
		{
			"label": "python3: Run PYLAMA on this module.",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"command": "pylama ${file}",
			"group": "build",
		},
		{
			"label": "python3: Run PYLAMA on whole project.",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"command": "pylama",
			"group": "build",
		},
		{
			"label": "python3: Run PYRIGHT on whole project.",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"command": "pyright",
			"group": "build",
		},
		{
			"label": "python3: Run ISORT on this module.",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"command": "isort ${file}",
			"group": "build",
		},
		{
			"label": "python3: Run PYTEST on this module.",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"command": "pytest ${file}",
			"group": "build",
		},
		{
			"label": "python3: Run PYTEST on whole project.",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"command": "pytest",
			"group": "build",
		},
	]
}